<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SDO.Splash" parent="Theme.SDO">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.SDO" parent="Base.Theme.SDO"></style>

    <style name="Base.Theme.SDO" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SDO.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
