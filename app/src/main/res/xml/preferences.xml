<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/general" />
    <ListPreference
        android:defaultValue="2048"
        android:entries="@array/resolutions"
        android:entryValues="@array/resolutionsValues"
        android:key="resolution"
        android:summary=""
        android:title="@string/preferences_resolution_title" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="httpCompatibilityMode"
        android:summary="Change this option if images do not load correctly"
        android:title="HTTPS compatibility mode" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="firstRun"
        android:summary="Tracks first run"
        android:title="Tracks first run" />

</PreferenceScreen>